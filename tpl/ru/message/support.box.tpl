{strip}<div class="block_form">		{if $tpl_errors|count}	    	<ul class="error_message">				{if $tpl_errors['message/support_frm'][0]=='user_not_found'}<li>Input e-mail</li>{/if}	            {if $tpl_errors['message/support_frm'][0]=='mail_wrong'}<li>Wrong e-mail</li>{/if}	            {if $tpl_errors['message/support_frm'][0]=='topic_empty'}<li>Input topic</li>{/if}	            {if $tpl_errors['message/support_frm'][0]=='text_empty'}<li>Input text</li>{/if}	        </ul>		{/if}	   	<form method="post" class='form-styled support-form' action="{_link module='message/support'}" name="message/support_frm">	        	<div class="field">					<i></i>					<label for="">Ваш E-Mail</label>					<input name="Mail" id="message/support_frm_Mail" value="{if ($smarty.request.Mail)}{$smarty.request.Mail}{else}{$user.uMail}{/if}" {if _uid()}readonly=''{/if} type="text">				</div>	        	{if $cats}					<div class="block_form_el cfix">			        	<label for="message/support_frm_Category">Category</label>			        	<div class="block_form_el_right">				            <select name="Category" id="message/support_frm_Category">				            	{foreach from=$cats item=cat}				                	<option value="{$cat}" {if $smarty.request.Category==$cat}selected{/if}>{$cat}</option>				                {/foreach}				            </select>				        </div>			        </div>		        {/if}		        <div class="field">					<i></i>					<label for="">Тема сообщения</label>					<input name="Topic" id="message/support_frm_Topic" value="{$smarty.request.Topic}" type="text">		       	</div>	        	<div class="field filed-textarea">					<i></i>		            <label>Текст сообщения...</label>		            <textarea name="Message" id="message/support_frm_Message" wrap="off" >{$smarty.request.Message}</textarea>		        </div>		    	{_getFormSecurity form='message/support_frm' captcha=$_cfg.Msg_Captcha}		        {if $__Capt}		        	{include file='captcha.tpl' form='message/support_frm'}		        {/if}		        <div class="clearfix"></div>		        <br/>		        <center>		    	<div  >		            <input name="message/support_frm_btn" type="submit" value="Отправить" >		        </div>		        </center>	    </form></div>{*include file='edit.other.tpl'	url="{_link module='message/support'}"	form_class='support-form form-styled'	fields=	[		'Mail'=>			[				'T',				'Ваш e-mail!!',				[					'user_not_found'=>'укажите e-mail',					'mail_wrong'=>'неверный e-mail'				],				'skip'=>0,				'default'=>$user.uMail,				'hint'=>'Ваш e-mail'			],		'Category'=>			[				'S',				'Категория',				0,				$cats,				'skip'=>!$cats			],		'Topic'=>			[				'L',				'Тема',				[					'topic_empty'=>'укажите тему'				],				'size'=>50,				'hint'=>'Тема'			],		'Message'=>			[				'W',				'Текст',				[					'text_empty'=>'укажите текст'				],				'size'=>12,				'cols'=>60,				'hint'=>'Текст'			]	]	captcha=$_cfg.Msg_Captcha	btn_text='Отправить'*}{/strip}